<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/fab_dialog">

        <RelativeLayout
            android:id="@+id/filter_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/margin_right">

            <TextView
                android:id="@+id/demotext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_edge"
                android:padding="10dp"
                android:text="Bàn trống" />

            <ImageView
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/demotext4"
                android:gravity="bottom"
                android:src="@drawable/calender_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/filter_unavailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/margin_right">

            <TextView
                android:id="@+id/filtertext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_edge"
                android:padding="10dp"
                android:text="Bàn có khách" />

            <ImageView
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/filtertext2"
                android:gravity="bottom"
                android:src="@drawable/dashboard_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/filter_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/margin_right">
            <TextView
                android:id="@+id/filtertext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_edge"
                android:padding="10dp"
                android:text="Tất cả các bàn" />
            <ImageView
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/filtertext1"
                android:gravity="bottom"
                android:src="@drawable/calender_icon" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>